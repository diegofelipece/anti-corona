{
    "name": "Anti-Corona",
    "version": "1.0.0",
    "description": "A cura do Coronavirus para o seu browser.",
    "icons": {
      "16": "icons/anticorona-16.png",
      "48": "icons/anticorona-48.png",
      "128": "icons/anticorona-128.png"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }],
    "background": {
      "scripts": ["dist/background.js"],
      "persistent": false
    },
    "permissions": [
      "activeTab"
    ],
    "manifest_version": 2
}
